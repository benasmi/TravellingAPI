<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.travel.travelapi.services.ReviewService">

    <select id="selectReviewsById" resultType="com.travel.travelapi.models.Review">
        SELECT * FROM REVIEW WHERE fk_placeId=#{id} limit #{lim}
    </select>
</mapper>